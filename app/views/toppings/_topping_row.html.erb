<tr>
	<td><%= topping_row.name %></td>
	<td><%= topping_row.vegetarian %></td>
	<td><%= topping_row.price %></td>
	<td><%= topping_row.calories %></td>
	<td>
		<% if @current_user.has_role(Role::STORE_OWNER) %>
			<%= link_to "Edit", edit_topping_path(topping_row.id) %>
			<%= button_to "Delete", topping_row, method: :delete, data: { turbo_confirm: "Are you sure?" } %>
		<% end %>
	</td>
</tr>
