<tr>
	<td><%= topping_row.name %></td>
	<td><%= topping_row.vegetarian %></td>
	<td><%= topping_row.price %></td>
	<td><%= topping_row.calories %></td>
	<% if @current_user.has_role(Role::STORE_OWNER) %>
		<td>
			<%= link_to "Edit", edit_topping_path(topping_row.id), class: "button" %>
			<!-- TODO: Add actual confirm to delete button -->
			<%= button_to "Delete", topping_row, method: :delete %>
		</td>
	<% end %>
</tr>
